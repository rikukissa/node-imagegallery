@import "mixins"
*
  box-sizing border-box

html, body
  width 100%
  height 100%
  margin 0
  background #222

#signin
  position fixed
  left 50%
  top 50%
  width 400px
  height 400px
  margin-top -200px
  margin-left -200px
.modal
  background-color #f3f2f1
  border-radius 5px
  box-shadow  0 4px 10px rgba(0,0,0,0.4)
  font-size 11px
  text-align center
  .modal-header
    height 100px
  .modal-content
    background-color #fffffb
    border-top 1px solid #c3c3c3
    border-bottom 1px solid #c3c3c3
    padding 18px 0
    width 100%    
.overlay
  position fixed
  top 0
  left 0
  width 100%
  height 100%
  &.overlay-dark
    background rgba(0, 0, 0, 0.75)

#filelist
  overflow hidden
  img
    display block
    float left
    transition 0.3s all
    // transform scale(0.8, 0.8)
    &:hover
      z-index 2
      position relative
      transform scale(1.2, 1.2)
iframe 
  display none